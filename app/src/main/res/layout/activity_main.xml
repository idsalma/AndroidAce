<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/soldeInput"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/enter_solde"
        android:inputType="numberDecimal"
        android:autofillHints="name"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <Spinner
        android:id="@+id/formatSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/format_options" />

    <Spinner
        android:id="@+id/typeSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_marginBottom="8dp"
        android:entries="@array/account_types" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_button"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/compteHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/compte_header"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/compteContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>
</LinearLayout>
